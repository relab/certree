{
  "name": "certree",
  "version": "0.2.0",
  "description": "Certification Tree",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "compile": "truffle compile",
    "console": "truffle console",
    "migrate": "truffle migrate --reset",
    "test": "truffle test",
    "test:gas": "truffle test --network ganache test/gas-report/*.js",
    "coverage": "truffle run coverage --file=\"test/*.js\" --network ganache",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:js:fix": "eslint --ignore-path .gitignore . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "sol2uml": "sol2uml ./contracts -b Node -o Node.svg",
    "ganache-cli": "ganache-cli --deterministic --networkId 5777 --host 127.0.0.1 --port 7545",
    "migrate:ganache": "truffle migrate --reset --network ganache",
    "test:ganache": "truffle test --network ganache test/*.js",
    "ropsten-fork": "ROPSTEN_TESTNET=true scripts/run_local_ropsten_fork.sh",
    "test:ropsten": "ROPSTEN_TESTNET=true truffle test --network ropsten",
    "migrate:ropsten": "ROPSTEN_TESTNET=true truffle migrate --reset --network ropsten"
  },
  "author": "Rodrigo Q. Saramago",
  "license": "MIT",
  "devDependencies": {
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@truffle/hdwallet-provider": "^1.0.40",
    "chai": "^4.2.0",
    "eslint": "^7.6.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-gas-reporter": "^0.2.17",
    "ganache-cli": "^6.9.1",
    "sol2uml": "^1.1.14",
    "solhint": "^3.1.0",
    "solidity-coverage": "^0.7.9",
    "truffle": "^5.1.37"
  }
}
