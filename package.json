{
  "name": "bbchain-contracts",
  "version": "0.0.1",
  "description": "Ethereum Contracts for BBChain project",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "truffle compile",
    "console": "truffle console",
    "migrate": "truffle migrate --reset",
    "test": "truffle test",
    "coverage": "truffle run coverage --file=\"test/*.js\" --network ganache",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "sol2uml": "sol2uml ./contracts -b AccountableIssuer",
    "ganache-cli": "ganache-cli --deterministic --networkId 5777 --host 127.0.0.1 --port 7545",
    "migrate:ganache": "truffle migrate --reset --network ganache",
    "test:ganache": "truffle test --network ganache",
    "ropsten-fork": "ROPSTEN_TESTNET=true scripts/run_local_ropsten_fork.sh",
    "test:ropsten": "ROPSTEN_TESTNET=true truffle test --network ropsten",
    "migrate:ropsten": "ROPSTEN_TESTNET=true truffle migrate --reset --network ropsten"
  },
  "author": "Rodrigo Q. Saramago",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@openzeppelin/contracts": "^2.5.0",
    "@openzeppelin/test-helpers": "^0.5.5",
    "@truffle/hdwallet-provider": "^1.0.35",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-gas-reporter": "^0.2.17",
    "ganache-cli": "^6.9.1",
    "sol2uml": "^1.1.14",
    "solhint": "^2.3.1",
    "solidity-coverage": "^0.7.4",
    "truffle": "^5.1.18"
  }
}